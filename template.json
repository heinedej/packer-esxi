{
  "provisioners": [
    {
      "type": "shell",
      "inline": [
        "esxcli system settings advanced set -o /Net/FollowHardwareMac -i 1"
      ]
    },
    {
      "type": "file",
      "source": "local.sh",
      "destination": "/etc/rc.local.d/local.sh"
    },
    {
      "type": "file",
      "source": "vagrant.pub",
      "destination": "/etc/ssh/keys-root/authorized_keys"
    }
  ],
  "builders": [
    {
      "type": "hyperv-iso",
      "headless": true,
      "vm_name": "esxi55",
      "memory": "4096",
      "cpus": "4",
      "switch_name": "External",
      "enable_virtualization_extensions": true,
      "use_legacy_network_adapter": true,
      "boot_command": [
        "<tab><wait>O<wait> ignoreHeadless=TRUE ks=http://{{ .HTTPIP }}:{{ .HTTPPort }}/ks.cfg<enter><wait>"
      ],
      
      "disk_size": 20140,
      "http_directory": "http",
      "iso_checksum": "E7835F53EAE61DC3E03E5A4DD3D57ACE",
      "iso_checksum_type": "md5",
      "iso_urls": [
        "./ESXi-5.5.0-20180904001-standard-customized.iso"
      ],
      "ssh_username": "root",
      "ssh_password": "vagrant",
      "ssh_port": 22,
      "shutdown_command": "/bin/halt"
      }
          {
      "type": "qemu",
      "iso_url": "./ESXi-5.5.0-20180904001-standard-customized.iso",
      "iso_checksum": "E7835F53EAE61DC3E03E5A4DD3D57ACE",
      "iso_checksum_type": "md5",
      "output_directory": "output_vmware_kvm",
      "shutdown_command": "echo 'packer' | sudo -S shutdown -P now",
      "disk_size": 20140,
      "format": "qcow2",
      "accelerator": "kvm",
      "http_directory": "http",
      "ssh_username": "root",
      "ssh_password": "vagrant",
      "ssh_timeout": "20m",
      "vm_name": "esxi",
      "net_device": "virtio-net",
      "disk_interface": "virtio",
      "boot_wait": "10s",
      "boot_command": [
        "<tab><wait>O<wait> ignoreHeadless=TRUE ks=http://{{ .HTTPIP }}:{{ .HTTPPort }}/ks.cfg<enter><wait>"
      ]
    }
  ],
  "post-processors": [
    {
      "type": "vagrant",
      "output": "{{.Provider}}_esxi55.box"
    }
  ]
}
